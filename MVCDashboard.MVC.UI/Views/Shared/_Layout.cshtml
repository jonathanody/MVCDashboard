<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" @ViewBag.EnableRefresh/>
	<title>@ViewBag.Title</title>	

	@CustomHtmlHelper.Link("metroUI/modern.css", Url)
	@CustomHtmlHelper.Link("metroUI/modern-additional.css", Url)
	@CustomHtmlHelper.Link("MVCDashboard.css", Url)
	@CustomHtmlHelper.Script("jquery-1.7.1.min.js", Url)
	@RenderSection("scriptsTop", false)
</head>

<body class="modern-ui">
	<div class="page">
		<div class="navigation-bar">
			<div class="navigation-bar-inner">
				<div class="brand">
					<a href="/"><span class="name">MVC Dashboard</span></a>
				</div>
				<ul>				
					<li class="sub-menu" data-role="dropdown">
						@Html.ActionLink("Testing", "Index", "Testing")
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Releases", "Index", "Release")</li>							
						</ul>
					</li>
					<li class="sub-menu" data-role="dropdown">
						@Html.ActionLink("Development", "Index", "Development")
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Releases", "Index", "Release")</li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
		<div class="page-region">
			@RenderBody()
		</div>		
	</div>
	
	@CustomHtmlHelper.Script("modernizr-1.7.min.js", Url)
	@CustomHtmlHelper.Script("metroUI/dropdown.js", Url)	
	@RenderSection("scriptsBottom", false)
</body>
</html>
